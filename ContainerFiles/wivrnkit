FROM archlinux:latest

LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the toolbox or distrobox command" \
      summary="A cloud-native terminal experience" \
      maintainer="jorge.castro@gmail.com"

# --- ROOT: initialize keyring and install essential packages ---
RUN pacman-key --init && \
    pacman -Syu --noconfirm --needed base-devel git wget sudo

# --- ROOT: create build user ---
RUN useradd -m build_user && \
    passwd -d build_user && \
    printf 'build_user ALL=(ALL) NOPASSWD: ALL\n' >> /etc/sudoers

# --- NON-ROOT: setup AUR helper (paru) ---
USER build_user
WORKDIR /home/build_user/AUR

RUN git clone https://aur.archlinux.org/paru.git && \
    cd paru && \
    makepkg -si --noconfirm --needed

# --- ROOT: copy scripts and packages ---
USER root
WORKDIR / 

COPY ../scripts/distrobox-shims.sh /distrobox-shims.sh
COPY ../packages/wivrnkit.packages /wivrnkit.packages

# --- ROOT: setup distrobox shims and system packages ---
RUN chmod +x /distrobox-shims.sh && /distrobox-shims.sh && \
    pacman -Syu --noconfirm --needed base-devel wget

# --- NON-ROOT: install project dependencies via paru ---
USER build_user
RUN grep -v '^#' /wivrnkit.packages | xargs -r -n1 paru -S --noconfirm --needed

# --- ROOT: install AppImage tools ---
USER root
RUN wget -q https://github.com/AppImage/AppImageKit/releases/download/continuous/appimagetool-x86_64.AppImage \
        -O /usr/local/bin/appimagetool && \
    chmod +x /usr/local/bin/appimagetool && \
    wget -q https://github.com/linuxdeploy/linuxdeploy/releases/download/continuous/linuxdeploy-x86_64.AppImage \
        -O /usr/local/bin/linuxdeploy && \
    chmod +x /usr/local/bin/linuxdeploy

# --- ROOT: cleanup temporary files ---
RUN rm -f /distrobox-shims.sh /wivrnkit.packages

# --- ROOT: delete build user and home directory ---
RUN userdel -r build_user || true
RUN pacman -Scc --noconfirm

# --- ROOT: final working directory ---
WORKDIR /


